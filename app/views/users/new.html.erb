<h1>新增使用者</h1>

<%= form_for(@user) do |form| %>

  <div class = "field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class = "field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class = "field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>
  <%= form.submit %>
<% end %>